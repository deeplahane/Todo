<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AddToDo</servlet-name>
  	<display-name>AddToDo</display-name>
  	<description></description>
  	<servlet-class>com.servlets.AddToDo</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Update_todo</servlet-name>
  	<display-name>Update_todo</display-name>
  	<description></description>
  	<servlet-class>com.servlets.Update_todo</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeleteTodo</servlet-name>
  	<display-name>DeleteTodo</display-name>
  	<description></description>
  	<servlet-class>com.servlets.DeleteTodo</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddToDo</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Update_todo</servlet-name>
  	<url-pattern>/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeleteTodo</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
</web-app>
